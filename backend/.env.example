# Server Configuration
PORT=3000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/commhub
# For MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/commhub?retryWrites=true&w=majority

# Ollama Configuration
OLLAMA_LOCAL_URL=http://localhost:11434
OLLAMA_REMOTE_URL=http://94.23.49.185:11434
OLLAMA_MODEL=llama3.1:8b
# Alternative: mistral:7b

# JWT Authentication
JWT_SECRET=your-super-secret-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Session
SESSION_SECRET=your-session-secret-key-change-this-in-production-min-32-chars

# Encryption (for OAuth tokens)
ENCRYPTION_KEY=change-this-32-char-encryption-key!!

# OAuth2 - Gmail
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/gmail/callback

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:8080

# OAuth2 - Microsoft (Exchange/Outlook)
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_REDIRECT_URI=http://localhost:3000/auth/microsoft/callback

# Security
BCRYPT_ROUNDS=10
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
# Options: error, warn, info, http, verbose, debug, silly

# Sync Scheduler
SYNC_ENABLED=true
SYNC_INTERVAL_MINUTES=5
SYNC_MAX_CONCURRENT=5
